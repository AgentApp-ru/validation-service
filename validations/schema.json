{
    "title": "Validators Schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "validators": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/string_validator"
                    },
                    {
                        "$ref": "#/definitions/date_validator"
                    },
                    {
                        "$ref": "#/definitions/number_validator"
                    }
                ]
            }
        }
    },
    "definitions": {
        "date_validator_border": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "type",
                "value"
            ],
            "anyOf": [
                {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "now"
                            ]
                        },
                        "value": {
                            "type": "null"
                        }
                    }
                },
                {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "date"
                            ]
                        },
                        "value": {
                            "type": "string",
                            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
                        }
                    }
                },
                {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "depending"
                            ]
                        },
                        "value": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "scope": {
                                    "type": "string",
                                    "minLength": 1
                                },
                                "key": {
                                    "type": "string",
                                    "minLength": 1
                                }
                            },
                            "required": [
                                "scope",
                                "key"
                            ]
                        }
                    }
                },
                {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "depending_formula"
                            ]
                        },
                        "value": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "depending": {
                                    "$ref": "#/definitions/date_validator_border"
                                },
                                "operation": {
                                    "type": "string",
                                    "enum": [
                                        "add",
                                        "subtract"
                                    ]
                                },
                                "value": {
                                    "type": "number"
                                },
                                "unit": {
                                    "type": "string",
                                    "enum": [
                                        "year",
                                        "month",
                                        "day",
                                        "hour",
                                        "second"
                                    ]
                                }
                            },
                            "required": [
                                "depending",
                                "operation",
                                "value",
                                "unit"
                            ]
                        }
                    }
                },
                {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "depending_condition_formula"
                            ]
                        },
                        "value": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "depending": {
                                    "$ref": "#/definitions/date_validator_border"
                                },
                                "operation": {
                                    "type": "string",
                                    "enum": [
                                        "add",
                                        "subtract"
                                    ]
                                },
                                "value": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "field": {
                                            "type": "object",
                                            "properties": {
                                                "scope": {
                                                    "type": "string"
                                                },
                                                "key": {
                                                    "type": "string"
                                                }
                                            },
                                            "required": [
                                                "key"
                                            ]
                                        }
                                    },
                                    "required": [
                                        "field"
                                    ],
                                    "oneOf": [
                                        {
                                            "properties": {
                                                "condition": {
                                                    "type": "object",
                                                    "additionalProperties": false,
                                                    "properties": {
                                                        "type": {
                                                            "type": "string",
                                                            "enum": [
                                                                "equals"
                                                            ]
                                                        },
                                                        "default": {
                                                            "type": "number"
                                                        },
                                                        "items": {
                                                            "type": "object",
                                                            "additionalProperties": {
                                                                "type": "number"
                                                            }
                                                        }
                                                    },
                                                    "required": [
                                                        "default"
                                                    ]
                                                }
                                            }
                                        }
                                    ]
                                },
                                "unit": {
                                    "type": "string",
                                    "enum": [
                                        "year",
                                        "month",
                                        "day",
                                        "hour",
                                        "second"
                                    ]
                                }
                            },
                            "required": [
                                "depending",
                                "operation",
                                "value",
                                "unit"
                            ]
                        }
                    }
                }
            ]
        },
        "string_validator": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "field": {
                    "type": "string",
                    "minLength": 1
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "string"
                    ]
                },
                "allow_white_spaces": {
                    "type": "boolean"
                },
                "enabled_transformers": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "camel_case",
                            "remove_first_whitespace"
                        ]
                    }
                },
                "patterns": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "name": {
                                "type": "string",
                                "minLength": 1
                            },
                            "patterns": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "chars": {
                                            "type": "string",
                                            "minLength": 1,
                                            "pattern": "^\\[.*\\]$"
                                        },
                                        "min": {
                                            "type": "number",
                                            "minimum": 0
                                        },
                                        "max": {
                                            "type": "number",
                                            "minimum": 1
                                        }
                                    },
                                    "required": [
                                        "chars"
                                    ]
                                }
                            }
                        },
                        "required": [
                            "name",
                            "patterns"
                        ]
                    }
                }
            },
            "required": [
                "type",
                "patterns",
                "field"
            ]
        },
        "date_validator": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "field": {
                    "type": "string",
                    "minLength": 1
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "date"
                    ]
                },
                "patterns": {
                    "type": "array",
                    "maxItems": 1,
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "max": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/date_validator_border"
                                }
                            },
                            "min": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/date_validator_border"
                                }
                            }
                        },
                        "required": [
                            "min"
                        ]
                    }
                }
            },
            "required": [
                "type",
                "patterns",
                "field"
            ]
        },
        "number_validator": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "field": {
                    "type": "string",
                    "minLength": 1
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "number"
                    ]
                },
                "patterns": {
                    "type": "array",
                    "maxItems": 1,
                    "items": {
                        "type": "object",
                        "properties": {
                            "max": {
                                "type": "number"
                            },
                            "min": {
                                "type": "number"
                            }
                        },
                        "anyOf": [
                            {
                                "required": [
                                    "min"
                                ]
                            },
                            {
                                "required": [
                                    "max"
                                ]
                            },
                            {
                                "required": [
                                    "max",
                                    "min"
                                ]
                            }
                        ]
                    }
                }
            },
            "required": [
                "type"
            ]
        }
    }
}
