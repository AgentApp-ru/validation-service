{
  "$schema": "./_schema.json",
  "validators": [
    {
      "field": "period",
      "type": "number",
      "patterns": [
        {
          "max": 12,
          "min": 3
        }
      ]
    },
    {
      "field": "start_date",
      "type": "date",
      "patterns": [
        {
          "min": [
            {
              "type": "now",
              "value": null
            }
          ],
          "max": [
            {
              "type": "depending_formula",
              "value": {
                "depending": {
                  "type": "now",
                  "value": null
                },
                "operation": "add",
                "value": 3,
                "unit": "month"
              }
            }
          ]
        }
      ]
    },
    {
      "field": "end_date",
      "type": "date",
      "patterns": [
        {
          "min": [
            {
              "type": "depending_formula",
              "value": {
                "depending": {
                  "type": "depending",
                  "value": {
                    "scope": "self",
                    "key": "start_date"
                  }
                },
                "operation": "add",
                "value": 364,
                "unit": "day"
              }
            }
          ],
          "max": [
            {
              "type": "depending_formula",
              "value": {
                "depending": {
                  "type": "depending",
                  "value": {
                    "scope": "self",
                    "key": "start_date"
                  }
                },
                "operation": "add",
                "value": 365,
                "unit": "day"
              }
            }
          ]
        }
      ]
    }
  ]
}