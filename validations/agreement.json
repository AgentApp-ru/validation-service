{
  "$schema": "./_schema.json",
  "validators": [
    {
      "field": "period",
      "patterns": [
        {
          "max": 12,
          "min": 3
        }
      ],
      "requirements": {
        "required": {
          "type": "this",
          "value": true
        }
      },
      "type": "number"
    },
    {
      "field": "start_date",
      "patterns": [
        {
          "max": [
            {
              "type": "depending_formula",
              "value": {
                "depending": {
                  "type": "now",
                  "value": null
                },
                "operation": "add",
                "unit": "day",
                "value": 65
              }
            }
          ],
          "min": [
            {
              "type": "now",
              "value": null
            }
          ]
        }
      ],
      "requirements": {
        "required": {
          "type": "this",
          "value": true
        }
      },
      "type": "date"
    },
    {
      "field": "end_date",
      "patterns": [
        {
          "max": [
            {
              "type": "depending_formula",
              "value": {
                "depending": {
                  "type": "depending",
                  "value": {
                    "key": "start_date",
                    "scope": "self"
                  }
                },
                "operation": "add",
                "unit": "day",
                "value": 365
              }
            }
          ],
          "min": [
            {
              "type": "depending_formula",
              "value": {
                "depending": {
                  "type": "depending",
                  "value": {
                    "key": "start_date",
                    "scope": "self"
                  }
                },
                "operation": "add",
                "unit": "day",
                "value": 364
              }
            }
          ]
        }
      ],
      "requirements": {
        "required": {
          "type": "this",
          "value": true
        }
      },
      "type": "date"
    }
  ]
}