{
    "$schema": "./_schema.json",
    "validators": [
        {
            "field": "period",
            "type": "number",
            "max": 12,
            "min": 3
        },
        {
            "field": "start_date",
            "type": "date",
            "min": [
                "now"
            ],
            "max": [
                "now + 3m"
            ]
        },
        {
            "field": "end_date",
            "type": "date",
            "min": [
                "agreement.start_date + agreement.period"
            ],
            "max": [
                "agreement.start_date + agreement.period"
            ]
        }
    ]
}