{
  "$schema": "../schema.json",
  "validators": [
    {
      "field": "first_name",
      "allow_white_spaces": true,
      "enable_camel_case_transform": true,
      "patterns": [
        {
          "name": "name",
          "patterns": [
            {
              "chars": "[а-яА-ЯёЁ\\s-'`]",
              "max": 60,
              "min": 1
            }
          ]
        }
      ],
      "type": "string"
    },
    {
      "field": "last_name",
      "allow_white_spaces": true,
      "enable_camel_case_transform": true,
      "patterns": [
        {
          "name": "name",
          "patterns": [
            {
              "chars": "[а-яА-ЯёЁ\\s-'`]",
              "max": 60,
              "min": 0
            }
          ]
        }
      ],
      "type": "string"
    },
    {
      "field": "patronymic",
      "allow_white_spaces": true,
      "enable_camel_case_transform": true,
      "patterns": [
        {
          "name": "name",
          "patterns": [
            {
              "chars": "[а-яА-ЯёЁ\\s-'`]",
              "max": 60,
              "min": 0
            }
          ]
        }
      ],
      "type": "string"
    },
    {
      "field": "birth_date",
      "type": "date",
      "patterns": [
        {
          "max": [
            {
              "type": "depending_formula",
              "value": {
                "depending": {
                  "type": "now",
                  "value": null
                },
                "operation": "subtract",
                "value": 18,
                "unit": "year"
              }
            }
          ],
          "min": [
            {
              "type": "date",
              "value": "1923-01-01"
            }
          ]
        }
      ]
    },
    {
      "field": "russian_internal_passport",
      "type": "string",
      "allow_white_spaces": true,
      "patterns": [
        {
          "name": "series",
          "patterns": [
            {
              "chars": "[0-9]",
              "max": 2
            },
            {
              "chars": "[0-9]",
              "max": 2
            }
          ]
        },
        {
          "name": "number",
          "patterns": [
            {
              "chars": "[0-9]",
              "max": 6
            }
          ]
        }
      ]
    },
    {
      "field": "foreign_external_passport",
      "allow_white_spaces": false,
      "patterns": [
        {
          "name": "number",
          "patterns": [
            {
              "chars": "[0-9A-Za-z]",
              "max": 60,
              "min": 1
            }
          ]
        }
      ],
      "type": "string"
    },
    {
      "field": "credential__issue_date",
      "patterns": [
        {
          "max": [
            {
              "type": "now",
              "value": null
            }
          ],
          "min": [
            {
              "type": "depending_formula",
              "value": {
                "depending": {
                  "type": "depending",
                  "value": {
                    "scope": "person",
                    "key": "birth_date"
                  }
                },
                "operation": "add",
                "value": 14,
                "unit": "year"
              }
            }
          ]
        }
      ],
      "type": "date"
    },
    {
      "field": "credential__issue_point",
      "allow_white_spaces": true,
      "patterns": [
        {
          "name": "issue_point",
          "patterns": [
            {
              "chars": "[а-яА-ЯёЁ\\s-'`]",
              "max": 255,
              "min": 1
            }
          ]
        }
      ],
      "type": "string"
    },
    {
      "field": "address",
      "allow_white_spaces": true,
      "patterns": [
        {
          "name": "issue_point",
          "patterns": [
            {
              "chars": "[а-яА-ЯёЁ0-9-/\\(\\)\\s№,.'`]",
              "max": 1000,
              "min": 5
            }
          ]
        }
      ],
      "type": "string"
    },
    {
      "field": "phone",
      "allow_white_spaces": true,
      "patterns": [
        {
          "name": "phone",
          "patterns": [
            {
              "chars": "[0-9]",
              "max": 18,
              "min": 11
            }
          ]
        }
      ],
      "type": "string"
    },
    {
      "field": "email",
      "allow_white_spaces": true,
      "patterns": [
        {
          "name": "email",
          "patterns": [
            {
              "chars": "[a-zA-Z0-9_.+-]",
              "max": 18,
              "min": 2
            },
            {
              "chars": "[@]",
              "max": 1,
              "min": 1
            },
            {
              "chars": "[a-zA-Z0-9-]",
              "max": 18,
              "min": 2
            },
            {
              "chars": "[.]",
              "max": 1,
              "min": 1
            },
            {
              "chars": "[a-zA-Z0-9-.]",
              "max": 18,
              "min": 2
            }
          ]
        }
      ],
      "type": "string"
    }
  ]
}